<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wo_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutPage.WorkoutActivity">
    <TextView
        android:id="@+id/header_wo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Workout"
        android:elevation="5dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:id="@+id/list_wo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/header_wo"
        app:layout_constraintTop_toBottomOf="@+id/header_wo"
        app:layout_constraintBottom_toTopOf="@+id/floating_mulai">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/workout_item"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"/>
    </ScrollView>
    <LinearLayout
        android:id="@+id/floating_mulai"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_mulai"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Mulai"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>